<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.test.fastshape.MainActivity"
    tools:showIn="@layout/activity_main"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <com.github.fastshape.MyLinearLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:gravity="center"
                android:orientation="vertical"
                app:borderColor="@color/fenhong"
                app:borderWidth="2px"
                app:radius="70dp"
                >

                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp">

                    <com.github.fastshape.MyTextView
                        android:id="@+id/view"
                        android:layout_width="@dimen/yuan_width"
                        android:layout_height="@dimen/yuan_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        app:borderColor="@color/colorPrimaryDark"
                        app:borderWidth="2px"
                        app:radius="@dimen/yuan_radius"/>

                    <com.github.fastshape.MyTextView
                        android:id="@+id/view2"
                        android:layout_width="@dimen/yuan_width"
                        android:layout_height="@dimen/yuan_height"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="11dp"
                        android:gravity="center"
                        app:borderColor="@color/colorPrimaryDark"
                        app:borderWidth="2px"
                        app:radius="@dimen/yuan_radius"/>

                    <com.github.fastshape.MyTextView
                        android:id="@+id/view4"
                        android:layout_width="@dimen/yuan_width"
                        android:layout_height="@dimen/yuan_height"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        app:borderColor="@color/colorPrimaryDark"
                        app:borderWidth="2px"
                        app:radius="@dimen/yuan_radius"/>

                    <com.github.fastshape.MyTextView
                        android:id="@+id/view3"
                        android:layout_width="@dimen/yuan_width"
                        android:layout_height="@dimen/yuan_height"
                        android:layout_alignLeft="@+id/view2"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/view2"
                        android:layout_marginBottom="11dp"
                        android:gravity="center"
                        app:borderColor="@color/colorPrimaryDark"
                        app:borderWidth="2px"
                        app:radius="@dimen/yuan_radius"/>

                    <com.github.fastshape.MyTextView
                        android:layout_width="@dimen/yuan_width"
                        android:layout_height="@dimen/yuan_height"
                        android:layout_alignLeft="@+id/view"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/view"
                        android:gravity="center"
                        app:borderColor="@color/colorPrimaryDark"
                        app:borderWidth="2px"
                        app:radius="@dimen/yuan_radius"/>

                    <com.github.fastshape.MyTextView
                        android:id="@+id/view5"
                        android:layout_width="@dimen/yuan_width"
                        android:layout_height="@dimen/yuan_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        app:borderColor="@color/colorPrimaryDark"
                        app:borderWidth="2px"
                        app:radius="@dimen/yuan_radius"/>

                    <com.github.fastshape.MyTextView
                        android:layout_width="@dimen/yuan_width"
                        android:layout_height="@dimen/yuan_height"
                        android:layout_alignLeft="@+id/view6"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/view6"
                        android:layout_marginBottom="11dp"
                        android:gravity="center"
                        app:borderColor="@color/colorPrimaryDark"
                        app:borderWidth="2px"
                        app:radius="@dimen/yuan_radius"/>

                    <com.github.fastshape.MyTextView
                        android:id="@+id/view6"
                        android:layout_width="@dimen/yuan_width"
                        android:layout_height="@dimen/yuan_height"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="11dp"
                        android:gravity="center"
                        app:borderColor="@color/colorPrimaryDark"
                        app:borderWidth="2px"
                        app:radius="@dimen/yuan_radius"/>
                </RelativeLayout>

                <com.github.fastshape.MyLinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <com.github.fastshape.MyLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.github.fastshape.MyTextView
                            android:layout_width="@dimen/my_width"
                            android:layout_height="@dimen/my_height"
                            android:gravity="center"
                            android:text="A"
                            app:bottomLeftRadius="@dimen/radius"
                            app:solidColor="@color/colorPrimaryDark"
                            app:topRightRadius="@dimen/radius"
                            />

                        <com.github.fastshape.MyTextView
                            android:layout_width="@dimen/my_width"
                            android:layout_height="@dimen/my_height"
                            android:gravity="center"
                            android:text="B"
                            app:bottomRightRadius="@dimen/radius"
                            app:solidColor="@color/colorPrimaryDark"
                            app:topLeftRadius="@dimen/radius"
                            />

                    </com.github.fastshape.MyLinearLayout>

                </com.github.fastshape.MyLinearLayout>

                <com.github.fastshape.MyLinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.github.fastshape.MyTextView
                        android:layout_width="@dimen/my_width"
                        android:layout_height="@dimen/my_height"
                        android:layout_marginLeft="2px"
                        android:gravity="center"
                        android:text="C"
                        app:bottomRightRadius="@dimen/radius"
                        app:solidColor="@color/colorPrimaryDark"
                        app:topLeftRadius="@dimen/radius"
                        />

                    <com.github.fastshape.MyTextView
                        android:layout_width="@dimen/my_width"
                        android:layout_height="@dimen/my_height"
                        android:gravity="center"
                        android:text="D"
                        app:bottomLeftRadius="@dimen/radius"
                        app:solidColor="@color/colorPrimaryDark"
                        app:topRightRadius="@dimen/radius"
                        />

                </com.github.fastshape.MyLinearLayout>

            </com.github.fastshape.MyLinearLayout>

            <com.github.fastshape.MyLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                >

                <com.github.fastshape.MyLinearLayout
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    >

                    <com.github.fastshape.MyLinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        app:solidColor="#2CE38F"
                        app:topLeftRadius="35dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <com.github.fastshape.MyTextView
                                android:layout_width="@dimen/ll_width"
                                android:layout_height="@dimen/ll_width"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                app:borderColor="#ffffff"
                                app:borderWidth="2dp"
                                app:bottomLeftRadius="@dimen/ll_radius"
                                app:solidColor="#2CE38F"
                                app:topRightRadius="@dimen/ll_radius"/>
                        </RelativeLayout>
                    </com.github.fastshape.MyLinearLayout>

                    <com.github.fastshape.MyLinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        app:solidColor="#14BBF7"
                        app:topRightRadius="35dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <com.github.fastshape.MyTextView
                                android:layout_width="@dimen/ll_width"
                                android:layout_height="@dimen/ll_width"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                app:borderColor="#ffffff"
                                app:borderWidth="2dp"
                                app:bottomRightRadius="@dimen/ll_radius"
                                app:solidColor="#14BBF7"
                                app:topLeftRadius="@dimen/ll_radius"/>
                        </RelativeLayout>
                    </com.github.fastshape.MyLinearLayout>
                </com.github.fastshape.MyLinearLayout>

                <com.github.fastshape.MyLinearLayout
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    >

                    <com.github.fastshape.MyLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <com.github.fastshape.MyLinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:orientation="horizontal"
                            app:bottomLeftRadius="35dp"
                            app:solidColor="#FFD586"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <com.github.fastshape.MyTextView
                                    android:layout_width="@dimen/ll_width"
                                    android:layout_height="@dimen/ll_width"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    app:borderColor="#ffffff"
                                    app:borderWidth="2dp"
                                    app:bottomRightRadius="@dimen/ll_radius"
                                    app:solidColor="#FFD586"
                                    app:topLeftRadius="@dimen/ll_radius"/>
                            </RelativeLayout>
                        </com.github.fastshape.MyLinearLayout>

                        <com.github.fastshape.MyLinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:orientation="horizontal"
                            app:bottomRightRadius="35dp"
                            app:solidColor="#FF7B6F"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <com.github.fastshape.MyTextView
                                    android:layout_width="@dimen/ll_width"
                                    android:layout_height="@dimen/ll_width"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    app:borderColor="#ffffff"
                                    app:borderWidth="2dp"
                                    app:bottomLeftRadius="@dimen/ll_radius"
                                    app:solidColor="#FF7B6F"
                                    app:topRightRadius="@dimen/ll_radius"/>
                            </RelativeLayout>
                        </com.github.fastshape.MyLinearLayout>
                    </com.github.fastshape.MyLinearLayout>
                </com.github.fastshape.MyLinearLayout>
            </com.github.fastshape.MyLinearLayout>


        </LinearLayout>

        <com.github.fastshape.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <com.github.fastshape.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <com.github.fastshape.MyCheckBox
                    android:id="@+id/test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Android2"
                    app:normal_drawable_left="@mipmap/ic_launcher"
                    app:checked_drawable_left="@mipmap/ic_launcher"
                    app:checked_drawable_left_color="@color/white"
                    app:normal_drawable_left_color="@color/white"
                    />

                <com.github.fastshape.MyCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:checked="false"
                    android:text="Android"
                    />
            </com.github.fastshape.MyLinearLayout>

        </com.github.fastshape.MyLinearLayout>

        <com.github.fastshape.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:borderColor="@color/colorPrimary"
            app:borderWidth="1px"
            app:shapeType="line"
            >
        </com.github.fastshape.MyLinearLayout>

        <com.github.fastshape.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:borderColor="@color/colorPrimary"
            app:borderDashGap="5dp"
            app:borderDashWidth="8dp"
            app:borderWidth="1px"
            app:shapeType="line"
            >
        </com.github.fastshape.MyLinearLayout>

        <com.github.fastshape.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            >

            <com.github.fastshape.MyEditText
                android:id="@+id/et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="android"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                app:borderColor="@color/colorPrimary"
                app:borderWidth="1px"
                />

            <com.github.fastshape.MyEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="android"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                app:borderColor="@color/colorPrimary"
                app:borderWidth="1px"
                app:clearIconDrawable="@drawable/text_clear2"
                app:hiddenClearIcon="true"
                />
        </com.github.fastshape.MyLinearLayout>

        <com.github.fastshape.MyTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="android"
            app:borderColor="@color/colorPrimary"
            app:borderDashGap="5dp"
            app:borderDashWidth="8dp"
            app:borderWidth="1px"
            app:pressColor="@color/c_press"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <com.github.fastshape.MyTextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:gradientEndColor="@color/colorPrimary"
                app:gradientRadius="20dp"
                app:gradientStartColor="@color/colorAccentAlpha"
                app:gradientType="radial"
                app:shapeType="oval"
                />

            <com.github.fastshape.MyTextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:gradientEndColor="@color/colorAccentAlpha"
                app:gradientStartColor="@color/colorPrimary"
                app:gradientType="linear"
                app:shapeType="rectangle"
                />

            <com.github.fastshape.MyTextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:gradientEndColor="@color/colorPrimary"
                app:gradientStartColor="@color/colorAccentAlpha"
                app:gradientType="sweep"
                app:shapeType="oval"
                />
        </LinearLayout>

        <com.github.fastshape.MyTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Android"
            app:borderColor="@color/colorPrimary"
            app:borderDashGap="2dp"
            app:borderDashWidth="8dp"
            app:bottom_line="true"
            app:top_line="true"
            />

        <com.github.fastshape.MyTextView
            android:id="@+id/tvLook"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:text="点我看效果"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:borderColor="@color/colorPrimary"
            app:borderWidth="1px"
            app:radius="4dp"
            app:pressColor="@color/c_press"
            />
    </LinearLayout>

</ScrollView>