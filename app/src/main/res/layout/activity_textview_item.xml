<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".test.LinearLayoutActivity"
    android:orientation="horizontal">
    <com.github.fastshape.MyTextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Android"
        app:borderColor="@color/fenhong"
        app:borderDashGap="2dp"
        app:borderDashWidth="4dp"
        app:borderWidth="2px"
        app:gradientCenterColor="@color/colorPrimary"
        app:gradientStartColor="@color/fenhong"
        app:gradientEndColor="@color/c_press"
        app:gradientType="linear"
        app:radius="6dp"
        app:solidColor="@color/c_press"
        app:clipSwitch="true"
        app:clipBorderDashWidth="5dp"
        app:clipBorderDashGap="5dp"
        app:clipBorderWidth="10dp"
        app:clipBorderColor="@color/black"
        />
</LinearLayout>